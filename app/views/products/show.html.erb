  <div class="container">
    <h2><%= @product.name %></h2>
    <h3 class="discounts"><%= @product.sale_message %></h3>
    <p>Price: <%= @product.price %></p>
    <p>Tax: <%= number_to_currency(@product.tax) %></p>
    <p>Total: <%= number_to_currency(@product.total) %></p>
    <p>Image: <%=@product.image %></p>
    <p>Description: <%= @product.description %></p>
    <p>Created at: <%= @product.created_at %></p>

  <div class="row">
  <br></br>
  <a class="btn btn-default" href="/products/<%= @product.id %>/edit" role="button">Edit</a>

  <a class="btn btn-default" href="/products/<%= @product.id %>/destroy" role="button">Delete Product</a>

  <a class="btn btn-default" href="../products" role="button">Back to Listings</a>
</div>
</div>